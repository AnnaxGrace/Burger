<h1>Hamburgers</h1>


{{!-- For each item in the table with values, create an h2 and a button. Changes class depending on boolean. --}}
{{#each burgers}}
    <h2 {{#if devoured}} class = "eaten" {{else}} class = "notEaten" {{/if}}>{{this.burger_name}}</h2>
        <button {{#if devoured}} class = "eaten" {{else}} class = "notEaten" {{/if}} data-id="{{this.id}}" data-eaten = "{{this.devoured}}">
            {{#if devoured}} Eaten {{else}} Eat Me! {{/if}}
        </button>
{{/each}}

{{!-- Creates a form that will take information for our new item that we will insert --}}
<form class ="create-form">
    <div class = "form-group">
        <label for = "newHamburger">New Burger Name: </label>
        <input type = "text" id = "newHamburger" name = "aBurger">
    </div>

    <button type ="submit">Add Burger</button>

</form>